

<div class="container">
  <div class="row">
    <%= cl_image_tag @cocktail.photo.key, width: 400, height: 300, crop: :fill %>
    <div class="col">
      <h1><%= @cocktail.name %></h1>

      <h3>Ingredients for this cocktail:</h3>
      <ul>
        <% @doses.each do |dose| %>
        <li>
          <%= dose.ingredient.name %> : <%= dose.description %>
            <%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %>
        </li>
        <% end %>
      </ul>

      <h5>Adding your ingredients: </h5>
      <%= simple_form_for [@cocktail,@dose] do |f|%>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.submit %>
      <% end %>

      <%= link_to "back to Cocktail list", cocktails_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>
