

<div class="container my-5">
  <div class="row">
    <%= cl_image_tag @cocktail.photo.key, width: 400, height: 500, crop: :fill %>
    <div class="cocktail-session ml-5">
      <div class="cocktail-info">
        <h1><%= @cocktail.name %></h1>
        <h5>Ingredients for this cocktail:</h5>
        <ul>
          <% @doses.each do |dose| %>
          <li>
            <%= dose.ingredient.name %> : <%= dose.description %>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do %>
              <i class="fas fa-trash-alt"></i>
              <% end %>
          </li>
          <% end %>
        </ul>
      </div>


      <div class="add-ingredient m-5">
        <h5>Adding your ingredients: </h5>
        <%= simple_form_for [@cocktail,@dose] do |f|%>
          <%= f.association :ingredient %>
          <%= f.label :description, 'Dose of the ingredient' %>
          <%= f.input :description, as: :string, label: false %>
          <%= f.submit %>
        <% end %>
      </div>

    </div>
  </div>
</div>
