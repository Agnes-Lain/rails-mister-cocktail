<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
url('https://images.unsplash.com/photo-1530064161350-7824b8cdeee9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80')">
  <div class="app-title">
    <h1>Cocktail Lover 2046</h1>
  </div>
</div>

<div class="container mt-5">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card m-2" style="width: 15rem; height: 20rem;">
        <%= cl_image_tag cocktail.photo.key, width: 238, height: 200, crop: :fill %>
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <p class="card-text"></p>
          <div class="card-link d-flex justify-content-between align-items-baseline">
            <%= link_to "How to make it", cocktail_path(cocktail), class:"btn btn-outline-dark" %>
            <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?"} do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
